<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    style="@style/scrollView"
    tools:context="com.example.android.p2_scorekeeperapp.MainActivity">

    <LinearLayout
        style="@style/LinearLayout1"
        android:orientation="vertical">

        <LinearLayout
            style="@style/LinearLayout1"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/LinearLayout2"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/LinearLayout3"
                    android:background="@drawable/graphic_amber">

                    <ImageView
                        style="@style/Photo"
                        android:contentDescription="@string/photo_player_a"
                        android:src="@drawable/sharapova_round1" />

                    <EditText
                        android:id="@+id/editNamePlayerA"
                        style="@style/Name"
                        android:labelFor="@id/editNamePlayerA" />

                    <EditText
                        android:id="@+id/editSurnamePlayerA"
                        style="@style/Surname"
                        android:labelFor="@id/editSurnamePlayerA" />
                </LinearLayout>

                <LinearLayout
                    style="@style/PointsGamesSetsA"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@color/colorAccent">

                    <TextView
                        style="@style/PointsLabel"
                        android:text="@string/points_sharapova_label" />

                    <LinearLayout style="@style/TextViewWeight">

                        <Button
                            style="@style/PlusButton"
                            android:onClick="addOneForTeamA" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/PointsGamesSetsA"
                    android:background="@color/colorAccent">

                    <TextView
                        android:id="@+id/points_player_a"
                        style="@style/PointsTeamAandB"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/PointsGamesSetsA"
                    android:background="@color/colorAccentLight">

                    <TextView
                        style="@style/TextViewWeight"
                        android:text="@string/games_sharapova_label" />

                    <TextView
                        android:id="@+id/games_player_a"
                        style="@style/GamesSetsA"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/PointsGamesSetsA"
                    android:background="@color/colorAccentLight">

                    <TextView
                        style="@style/TextViewWeight"
                        android:text="@string/sets_sharapova_label" />

                    <TextView
                        android:id="@+id/sets_player_a"
                        style="@style/GamesSetsA"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/LinearLayout2"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/LinearLayout3"
                    android:background="@drawable/graphic_amber">

                    <ImageView
                        style="@style/Photo"
                        android:contentDescription="@string/photo_player_b"
                        android:src="@drawable/halep_round" />

                    <EditText
                        android:id="@+id/editNamePlayerB"
                        style="@style/Name"
                        android:labelFor="@id/editNamePlayerB" />

                    <EditText
                        android:id="@+id/editSurnamePlayerB"
                        style="@style/Surname"
                        android:labelFor="@id/editSurnamePlayerB" />
                </LinearLayout>

                <LinearLayout
                    style="@style/PointsGamesSetsB"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@color/colorAccent">

                    <LinearLayout
                        style="@style/TextViewWeight"
                        android:layout_height="wrap_content">

                        <Button
                            style="@style/PlusButton"
                            android:onClick="addOneForTeamB" />
                    </LinearLayout>

                    <TextView
                        style="@style/PointsLabel"
                        android:text="@string/points_halep_label" />
                </LinearLayout>

                <LinearLayout
                    style="@style/PointsGamesSetsB"
                    android:background="@color/colorAccent">

                    <TextView
                        android:id="@+id/points_player_b"
                        style="@style/PointsTeamAandB"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/PointsGamesSetsB"
                    android:background="@color/colorAccentLight">

                    <TextView
                        android:id="@+id/games_player_b"
                        style="@style/GamesSetsB"/>

                    <TextView
                        style="@style/TextViewWeight"
                        android:text="@string/games_halep_label" />
                </LinearLayout>

                <LinearLayout
                    style="@style/PointsGamesSetsB"
                    android:background="@color/colorAccentLight">

                    <TextView
                        android:id="@+id/sets_player_b"
                        style="@style/GamesSetsB"/>

                    <TextView
                        style="@style/TextViewWeight"
                        android:text="@string/sets_halep_label" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/PointsGamesSetsA"
                    android:layout_marginTop="@dimen/dim10"
                    android:background="@color/colorAccent">

                    <TextView
                        style="@style/TextViewWeight"
                        android:text="@string/foot_fault"
                        android:textColor="@color/white" />

                    <TextView
                        style="@style/TextViewWeight"
                        android:text="@string/service_fault"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    style="@style/PointsGamesSetsA"
                    android:background="@color/colorAccentLight">

                    <TextView
                        android:id="@+id/foot_fault_player_a"
                        style="@style/FootFaultAandB"/>

                    <TextView
                        android:id="@+id/service_fault_player_a"
                        style="@style/ServiceFaultAandB"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/LinearLayoutFaultButtons"
                    android:layout_marginEnd="@dimen/dim8"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginRight="@dimen/dim8"
                    android:layout_marginStart="@dimen/activity_vertical_margin">

                    <LinearLayout style="@style/TextViewWeight">

                        <Button
                            style="@style/PlusButton"
                            android:layout_gravity="end"
                            android:onClick="addOneFootFaultTeamA" />
                    </LinearLayout>

                    <LinearLayout style="@style/TextViewWeight">

                        <Button
                            style="@style/PlusButton"
                            android:layout_gravity="end"
                            android:onClick="addOneServiceFaultTeamA" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/LinearLayout2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/PointsGamesSetsB"
                    android:layout_marginTop="@dimen/dim10"
                    android:background="@color/colorAccent">

                    <TextView
                        style="@style/TextViewWeight"
                        android:text="@string/foot_fault"
                        android:textColor="@color/white" />

                    <TextView
                        style="@style/TextViewWeight"
                        android:text="@string/service_fault"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    style="@style/PointsGamesSetsB"
                    android:background="@color/colorAccentLight">

                    <TextView
                        android:id="@+id/foot_fault_player_b"
                        style="@style/FootFaultAandB"/>

                    <TextView
                        android:id="@+id/service_fault_player_b"
                        style="@style/ServiceFaultAandB"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/LinearLayoutFaultButtons"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/dim8"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/dim8">

                    <LinearLayout style="@style/TextViewWeight">

                        <Button
                            style="@style/PlusButton"
                            android:layout_gravity="end"
                            android:onClick="addOneFootFaultTeamB" />
                    </LinearLayout>

                    <LinearLayout style="@style/TextViewWeight">

                        <Button
                            style="@style/PlusButton"
                            android:layout_gravity="end"
                            android:onClick="addOneServiceFaultTeamB" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/winner"
            style="@style/TheWinnerIs" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="resetScore"
            android:text="@string/reset_score"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>